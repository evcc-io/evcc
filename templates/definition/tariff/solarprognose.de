template: solarprognose.de
products:
  - brand: solarprognose.de
requirements:
  description:
    en: "[solarprognose.de](https://www.solarprognose.de) can be used for free (but donations are welcome). Plans can also be used by specifying an API key."
    de: "[solarprognose.de](https://www.solarprognose.de) kann kostenlos verwendet werden (Spenden sind allerdings willkommen). Pläne können ebenfalls verwendet werden, indem ein API-Key angegeben wird."
  evcc: ["skiptest"]
group: solar
params:
  - name: accesstoken
    description:
      en: access token from user profile
      de: Zugriffs-Schlüssel aus Benutzer-Profil
    required: true  
  - name: item
    description:
      en: either provide location, plant or inverter as item
      de: Entweder location, plant oder inverter als Element angeben
    required: true  
    advanced: false  
  - name: token
    description:
      en: unique token for selected item
      de: Eindeutiger Schlüssel für das angegebene Element 
    required: true  
    advanced: false      
  - name: algorithm
    description:
      en: forecasting algorithm
      de: Prognosealgorithmus
    default: mosmix  
    advanced: true          
  - name: interval
    default: 1h
    advanced: true
render: |
  type: custom
  tariff: solar
  forecast:
    source: http
    uri: https://www.solarprognose.de/web/solarprediction/api/v1?_format=json&access-token={{.accesstoken}}&item={{.item}}&token={{.token}}&algorithm={{.algorithm}}&type=hourly
    jq: |
      [ .data | to_entries.[] | {
        "start": (.key | tonumber | strftime("%FT%TZ") ),
        "end": (.key | tonumber + 3600 | strftime("%FT%TZ")  ) ,
        "price": (.value.[0]*1000)
      } ] | tostring
  interval: {{ .interval }}
